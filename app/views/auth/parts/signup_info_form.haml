- require_css 'views',true
.grid_9.push_7
  .dialog
    - if !flash_info.blank?
      = flash_info
    - mindpin_form_for @user,:url=>"active",:html=>{:method=>:put} do |f|
      = f.hidden_field :email,:maxlength=>50,:readonly=>true
      .field
        %label 用户邮箱
        = @user.email
      = f.text_field :name,:maxlength=>50,:desc=>'显示的名称，必填，以后可以修改'
      = f.password_field :password,:value=>'',:maxlength=>32
      = f.password_field :password_confirmation,:value=>'',:maxlength=>32
      .form_actions
        = f.submit "确认注册"
